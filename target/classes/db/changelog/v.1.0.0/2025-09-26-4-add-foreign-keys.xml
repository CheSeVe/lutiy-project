<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-fk-for-match_player" author="CheSeVe">
        <addForeignKeyConstraint baseTableName="match_player" baseColumnNames="match_id"
                                 constraintName="fk_match_player_match"
                                 referencedTableName="match"
                                 referencedColumnNames="match_id"
                                 deleteCascade="true"
                                 onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="add-fk-for-player_item" author="CheSeVe">
        <addForeignKeyConstraint baseTableName="player_item" baseColumnNames="match_player_id"
                                 constraintName="fk_player_item_match_player"
                                 referencedTableName="match_player"
                                 referencedColumnNames="id"
                                 deleteCascade="true"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>